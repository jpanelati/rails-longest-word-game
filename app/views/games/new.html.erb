<div class="container">
  <h1>Welcome to LongestWord!</h1>
  <ul>
    <% @grid.each do |letter|%>
    <li><%=letter %></li>
    <% end %>
  </ul>
  <p>What is the longest word you can find?</p>
  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @grid.join %>
    <%= hidden_field_tag :start_time, @start_time.to_f %>
    <input id="text-area" type="text" name="word" placeholder="word">
    <input id="submit" type="submit" class="submit-btn">
  </form>
</div>
